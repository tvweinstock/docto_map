<div class="container">
  <section>
    <h1> Professionnels de la santé</h1>

    <div class="row row-spacing">
      <div class="col-md-1">
        <strong> Prenom </strong>
      </div>
      <div class="col-md-3">
        <%= @professionnel.prenom %>
      </div>
    </div>

    <div class="row row-spacing">
      <div class="col-md-1">
        <strong> Nom </strong>
      </div>
      <div class="col-md-3">
        <%= @professionnel.nom %>
      </div>
    </div>

    <div class="row row-spacing">
      <div class="col-md-1">
        <strong> Spécialité </strong>
      </div>
      <div class="col-md-3">
        <%= @professionnel.specialite %>
      </div>
    </div>

    <div class="row row-spacing">
      <div class="col-md-1">
        <strong> Adresse </strong>
      </div>
      <div class="col-md-3">
        <%= @professionnel.address %>
      </div>
    </div>
    

  </section>
  <%= link_to 'Retour', professionnels_path, :class => 'btn btn-info btn-sm' %>
  <%= link_to 'Modifier', edit_professionnel_path(@professionnel), :class => 'btn btn-success btn-sm' %>
  
</div>
