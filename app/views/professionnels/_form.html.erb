<%= form_for @product, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :nom, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nom, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :prenom, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :prenom, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :adresse, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :adresse, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :specialite, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :specialite, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>